---
interface Props {
    title: string;
    suffix?: string;
    customColor?: string;
}

const { title, suffix, customColor } = Astro.props;
---

<h1 class={`font-bold text-lg ${customColor ? customColor : 'text-primary'}`}>
    {title}
    {suffix && <span class="text-accent">{suffix}</span>}
</h1>
