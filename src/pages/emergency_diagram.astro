---
import TitleDescription from '~/components/TitleDescription.astro';
import TitleHeader from '~/components/TitleHeader.astro';
import Layout from '~/layouts/Layout.astro';
import AddCircle from '~/components/addCircle.svelte';
import { Image } from 'astro:assets';
import planoImage from '~/assets/plano.jpeg';

const widths = [450, 800, 1200, 1600, 2000];
const sizes = '100vw';
---

<Layout title="Diagrama">
    <section
        id="diagram"
        class="flex relative min-h-screen w-full items-center justify-center"
    >
        <Image
            class="h-full w-1/2 object-cover"
            src={planoImage}
            widths={widths}
            sizes={sizes}
            alt={'Plano de emergencia'}
        />
        <AddCircle client:load />
        <div class="max-w-200 absolute top-0 left-0 p-8">
            <TitleHeader title="Diagrama de emergencia" />
            <TitleDescription title="Marca las afectadas áreas" />
        </div>
        <div class="flex flex-col space-y-4 absolute bottom-0 right-0 p-8">
            <div class="border-4 border-gray p-4 rounded-lg">
                <textarea
                    rows="5"
                    class="shadow appearance-none border w-full py-2 px-3
                leading-tight focus:outline-none focus:shadow-outline border-gray p-5 rounded-lg"
                    placeholder="Estación de almacen..."></textarea>
            </div>
            <div class="flex w-full space-x-4">
                <a
                    id="agregar"
                    type="button"
                    class="text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    style="background-color: #ED1C24; border-radius: 10px;"
                    href="/cinqui-demo"
                >
                    Cerrar
                </a>
                <a
                    id="agregar"
                    type="button"
                    class="text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    style="background-color: #ED1C24; border-radius: 10px;"
                    href="/cinqui-demo"
                >
                    Generar
                </a>
            </div>
        </div>
    </section>
</Layout>
